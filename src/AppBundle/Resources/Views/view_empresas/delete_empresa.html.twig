{% extends "@App/layout.html.twig" %}
{% block content %}
    <div class="row mt-5 text-center" >
        <div class="card col-5 m-auto" style="width: 20rem;">
            <img class="card-img-top" >
            <div class="card-block mb-2">
                <h4 class="card-title">Eliminar empresa</h4>
                <p class="card-text">¿Está seguro que desea eliminar a {{ empresa.nombre }}?</p>
                <form action="{{ path('app_empresas_eliminaempresas', {'id':empresa.id}) }}" method="post">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a href="{{ path('app_empresas_index') }}" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
{% endblock  %}